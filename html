<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>GIF Random Button</title>

    <style>
    body {
            font-family: Arial, sans-serif;
            padding: 20px;
            text-align: center;
        }

        button {
            padding: 12px 24px;
            font-size: 18px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            background-color: #4CAF50;
            color: white;
            transition: background 0.3s ease;
        }

        button:disabled {
            background-color: #888;
            cursor: not-allowed;
        }

        img {
            max-width: 90vw;
            max-height: 60vh;
            margin-top: 20px;
            border-radius: 8px;
        }
    </style>
</head>

<body>

    <h2>GIF Aleatorio</h2>

    <button id="gifButton">Mostrar GIF</button>
    <br>
    <img id="gifDisplay" src="media/gifs/Alien_Butt.gif" alt="" />

    <script>
    const gifs = 
    [
        "gif1.gif",
        "gif2.gif",
        "gif3.gif",
        "gif4.gif",
        "gif5.gif",
        "gif6.gif"
    ];

    const button = document.getElementById("gifButton");
    const display = document.getElementById("gifDisplay");

    button.addEventListener("click", () => 
    {
        // Desactivar el botón durante 3 segundos
        button.disabled = true;

        // Elegir gif aleatorio
        const randomGIF = gifs[Math.floor(Math.random() * gifs.length)];
        display.src = randomGIF;

        // Reactivar el botón después de 3 segundos
        setTimeout(() => {
        button.disabled = false;
        }, 3000);
    });
    </script>

</body>
